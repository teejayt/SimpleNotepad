<Window x:Class="SimpleNotepadApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Untitled-Window" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Close"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Time/Date"/>
                </MenuItem>
                <MenuItem Header="_Format">
                    <MenuItem Header="_Wrap"></MenuItem>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="_Status Bar"></MenuItem>
                </MenuItem>
                
                <MenuItem Header="Help">
                    <MenuItem Header="About the Author"></MenuItem>
                </MenuItem>

            </Menu>

           
            <StackPanel>
                <TextBox Height="298" TextWrapping="Wrap" Width="515"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
